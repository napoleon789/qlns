function nhansu_info($id='') {
    module_load_include('inc', 'node', 'node.pages');
    $node = node_load($id);
    $form = node_page_edit($node);
    // $form = '<div class="clear-form goldprice-sxht">' . $form . '</div>';
    if(arg(2) =='info'){
        drupal_set_title(t('Sơ yếu lý lịch'));
    }
    if(arg(2) == 'kpi') {
        drupal_set_title(t('Chỉ tiêu KPI'));
    }
    return $form;
}
