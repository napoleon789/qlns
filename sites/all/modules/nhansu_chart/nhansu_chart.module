function nhansu_chart_data($tid = null,$nid = null ) {
    $data = '';
    $cht = 0;
    if($tid == null){
        $role = nhansu_kpi_check_user();
        if($role == 1 || $role == 2) {
            $output = nhansu_kpi_get_all();
            foreach($output as $result) {
                $cht = $cht + $result['ht'];
            }
            $cht_ok = 100 - $cht;
            $data .= '[" ' . "Hoàn thành" . '", '. $cht . ' ],';
            $data .= '[" ' . "Chưa hoàn thành" . '", '. $cht_ok . ' ],';
            return $data;
            exit;
        }
        else{
            global $user;
            $uid = $user ->uid;
            $nid = nhansu_uid_to_nid($uid);
            $node = node_load($nid);
            $ctieu = $node ->field_chiteu['und'];
            foreach($ctieu as $k =>$result) {
                $node_dl = node_load($result['value']);
                $title = $node_dl -> title;
                $tt = $node ->field_toithieu['und'][$k]['value'];
                $mt = $node ->field_muctieu['und'][$k]['value'];
                $ht = $node->field_hoan_thanh['und'][$k]['value'];
                $ht = str_replace("%","",trim($ht));
                $cht = $cht + $ht;
            };
            $cht_ok = 100 - $cht;
            $data .= '[" ' . "Hoàn thành" . '", '. $cht . ' ],';
            $data .= '[" ' . "Chưa hoàn thành" . '", '. $cht_ok . ' ],';
            return $data;
        }
    }
    else {
        if($nid == 'ALL') {
            if($tid == 'ALL') {
                $output = nhansu_kpi_get_all();
                foreach($output as $result) {
                    $cht = $cht + $result['ht'];
                }
                $cht_ok = 100 - $cht;
                $data .= '[" ' . "Hoàn thành" . '", '. $cht . ' ],';
                $data .= '[" ' . "Chưa hoàn thành" . '", '. $cht_ok . ' ],';
                return $data;
            }
            else {
                $output = nhansu_kpi_get_all($tid);
                foreach($output as $result) {
                    $cht = $cht + $result['ht'];
                }
                $cht_ok = 100 - $cht;
                $data .= '[" ' . "Hoàn thành" . '", '. $cht . ' ],';
                $data .= '[" ' . "Chưa hoàn thành" . '", '. $cht_ok . ' ],';
                return $data;
            }
        }
        else {
            $nid = arg(2);
            $node = node_load($nid);
            $ctieu = $node ->field_chiteu['und'];
            foreach($ctieu as $k =>$result) {
                $node_dl = node_load($result['value']);
                $title = $node_dl -> title;
                $tt = $node ->field_toithieu['und'][$k]['value'];
                $mt = $node ->field_muctieu['und'][$k]['value'];
                $ht = $node->field_hoan_thanh['und'][$k]['value'];
                $ht = str_replace("%","",trim($ht));
                $cht = $cht + $ht;
            };
            $cht_ok = 100 - $cht;
            $data .= '[" ' . "Hoàn thành" . '", '. $cht . ' ],';
            $data .= '[" ' . "Chưa hoàn thành" . '", '. $cht_ok . ' ],';
            return $data;
        }

    }

}

