        $toi_thieu = $du_lieu['toi_thieu'];
        $thuc_hien = $du_lieu['thuc_hien'];
        $muc_tieu = $du_lieu['muc_tieu'];
    }
    if($role ==3) {
        global $user;
        $du_lieu = doanhthu_for_giamdoc(null,null,$user->uid);
