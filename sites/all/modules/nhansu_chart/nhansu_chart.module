        $ouput .= '
 <div class="canhbao_left">
                <ul>
                    <li class="do den_giaothong" style="background: red;width: 300px;height: 40px"></li>
                    <li class="vang den_giaothong dat_chuan" style="background: yellow;width: 300px;height: 40px"></li>
