function nhansu_chart_list_roles($uid = null) {
    $query = db_query("SELECT nid, title FROM {node} WHERE type = :type",array(":type" => 'article'));
    foreach($query as $rows) {
        $res[$rows->nid] = $rows->title;
    }
    return $res;
}
